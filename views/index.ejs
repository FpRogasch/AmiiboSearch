<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Amiibo Finder</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="stylesheet" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&family=Titan+One&display=swap"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="styles/main.css" />
  </head>

  <body>
    <form action="/submit" method="POST">
      <label for="amiiboName">Nombre del amiibo:</label>
      <input
        type="text"
        name="amiiboName"
        placeholder="Escribe el nombre del personaje del amiibo..."
      />
      <input type="submit" value="OK" />
    </form>

    <h1>Amiibos with the name:</h1>
    <div class="container">
      <div class="response-area">
        <% if(locals.amiibos) { %>
            <div class="row"> 
                <% amiibos.forEach((amiibo) => { %>
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <div class="card m-2" style="width: 18rem;">
                            <div class="card-header">
                                <h5 class="card-title text-center"><%= amiibo.name %></h5>
                            </div>
                            <img src="<%= amiibo.image %>" style="padding: 10px;" class="card-img-top" alt="...">
                            <div class="card-body">
                            <p class="card-text">Amiibo Series: <%= amiibo.amiiboSeries %></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
        <h3 class="">Busca tus amiibos</h3>
        <% } %>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
